{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/main.ts",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "rewrites": [
    {
      "source": "/guestbook",
      "destination": "backend/src/main.ts"
    },
    {
      "source": "/guestbook/(.*)",
      "destination": "backend/src/main.ts"
    },
    {
      "source": "/(.*)",
      "destination": "frontend/$1"
    }
  ]
}